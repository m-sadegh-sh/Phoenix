<CustomControls:WindowBase Title="X"
                           x:Class="Phoenix.WPF.ChildWindows.ProgressWindow"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:CustomControls="clr-namespace:Phoenix.WPF.CustomControls"
                           WindowStyle="None"
                           Height="75"
                           ShowInTaskbar="False"
                           Width="450">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom"
                   Style="{DynamicResource WindowContent}">
            <Grid Style="{DynamicResource WindowContentGrid}">
                <ProgressBar x:Name="pbCurrent"
                             IsIndeterminate="True"
                             x:FieldModifier="private" />
            </Grid>
        </DockPanel>
    </DockPanel>
</CustomControls:WindowBase>