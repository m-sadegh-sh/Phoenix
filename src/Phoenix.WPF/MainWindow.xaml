                           Style="{DynamicResource NonContentText}"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Text="{Binding Path=CompanyName, Source={StaticResource MainResources}}" />
                <TextBlock Grid.Column="2"
                           Style="{DynamicResource NonContentText}"
