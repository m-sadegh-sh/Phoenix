                    <MenuItem Header="{Binding Path=Title, Source={StaticResource LabsResources}}"
                              Command="Commands:CommandLibrary.OpenLabsWindow">
                    </MenuItem>
                    <MenuItem Header="{Binding Path=Title, Source={StaticResource LabPropsResources}}"
                              Command="Commands:CommandLibrary.OpenLabPropsWindow">
                    </MenuItem>
