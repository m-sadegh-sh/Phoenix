                              Command="Commands:CommandLibrary.OpenMaterialsWindow">
                    </MenuItem>
                    <MenuItem Header="{Binding Path=Title, Source={StaticResource ItemsResources}}"
                              Command="Commands:CommandLibrary.OpenItemsWindow">
                    </MenuItem>
                    <MenuItem
Header="{Binding Path=Title, Source={StaticResource RepositoryMaterialsAndItemsResources}}"
Command="Commands:CommandLibrary.OpenRepositoryMaterialsAndItemsWindow">
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="{Binding Path=Exit, Source={StaticResource SharedResources}}"
                              Command="Commands:CommandLibrary.ShutdownPhoenix">
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="{Binding Path=Title, Source={StaticResource SearchResources}}"
                          Command="Commands:CommandLibrary.OpenSearchWindow">

                    <MenuItem Header="{Binding Path=InProps, Source={StaticResource SearchResources}}"
                              Command="Commands:CommandLibrary.OpenSearchWindowInProps" />

                    <MenuItem Header="{Binding Path=InMaterials, Source={StaticResource SearchResources}}"
                              Command="Commands:CommandLibrary.OpenSearchWindowInMaterials" />

                    <MenuItem Header="{Binding Path=InRepositoryMaterials, Source={StaticResource SearchResources}}"
