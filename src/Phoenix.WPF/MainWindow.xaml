<CustomControls:WindowBase xmlns:my="clr-namespace:Phoenix.Infrastructure;assembly=Phoenix.Infrastructure"
                           x:Class="Phoenix.WPF.MainWindow"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:Commands="clr-namespace:Phoenix.WPF.Commands"
                           xmlns:CustomControls="clr-namespace:Phoenix.WPF.CustomControls"
                           xmlns:Wpf="clr-namespace:Phoenix.Infrastructure.Wpf;assembly=Phoenix.Infrastructure"
                           Title="{Binding Path=Text, ElementName=tbTitle}"
                           WindowState="Maximized"
                           WindowStyle="None"
                           ResizeMode="NoResize">
    <DockPanel>
        <DockPanel Style="{DynamicResource WindowHeader}"
                   DockPanel.Dock="Top">
            <Grid Style="{DynamicResource WindowHeaderGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image Style="{DynamicResource WindowIcon}"
                       Source="/Resources/Icons/WinForms.ico" />
                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="tbTitle"
                               Style="{DynamicResource WindowTitle}"
                               Text="{Binding Path=Title, Source={StaticResource MainResources}}" />
                    <TextBlock Style="{DynamicResource WindowDescription}"
                               Text="{Binding Path=Description, Source={StaticResource MainResources}}" />
                </StackPanel>
                <my:AnimatedImage x:Name="aiLoader"
                                  Grid.Column="3"
                                  Style="{DynamicResource LoaderImage}"
                                  x:FieldModifier="private" />
                <StackPanel Visibility="Hidden"
                            Grid.Column="4"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Name="spLinks"
                            x:FieldModifier="private">
                    <TextBlock Name="tbNewMessages"
                               Style="{DynamicResource NonContentText}"
                               x:FieldModifier="private" />
                    <TextBlock Visibility="Collapsed"
                               Style="{DynamicResource Separator}"
                               Name="tbSep1"
                               x:FieldModifier="private" />
                    <TextBlock>
                        <Hyperlink Command="Commands:CommandLibrary.ShowNotificationsWindow">
                            <Run
Text="{Binding Path=Title, Mode=OneWay, Source={StaticResource NotificationsResources}}" />
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Style="{DynamicResource Separator}" />
                    <TextBlock Style="{DynamicResource NonContentText}"
                               Name="tbUserName"
                               x:FieldModifier="private" />
                    <TextBlock Style="{DynamicResource Separator}" />
                    <TextBlock>
                        <Hyperlink Command="Commands:CommandLibrary.OpenAccountWindow">
                            <Run Text="{Binding Path=Title, Mode=OneWay, Source={StaticResource AccountResources}}" />
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Style="{DynamicResource Separator}" />
                    <TextBlock>
                        <Hyperlink Command="Commands:CommandLibrary.OpenAboutWindow">
                            <Run Text="{Binding Path=Title, Mode=OneWay, Source={StaticResource AboutResources}}" />
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Style="{DynamicResource Separator}" />
                    <TextBlock>
                        <Hyperlink Command="Commands:CommandLibrary.OpenBackupWindow">
                            <Run Text="{Binding Path=Title, Mode=OneWay, Source={StaticResource BackupResources}}" />
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Style="{DynamicResource Separator}" />
                    <TextBlock>
                        <Hyperlink Command="Commands:CommandLibrary.OpenRestoreWindow">
                            <Run Text="{Binding Path=Title, Mode=OneWay, Source={StaticResource RestoreResources}}" />
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Style="{DynamicResource Separator}" />
                    <TextBlock>
                        <Hyperlink Command="Commands:CommandLibrary.ShutdownPhoenix">
                            <Run Text="{Binding Path=Exit, Mode=OneWay, Source={StaticResource SharedResources}}" />
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </DockPanel>
        <DockPanel Style="{DynamicResource WindowFooter}"
                   DockPanel.Dock="Bottom">
            <Grid Style="{DynamicResource WindowFooterGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
